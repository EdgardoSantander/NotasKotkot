<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/rounded_bg_note"
    android:layout_margin="1dp">

    <!-- Título de la nota -->
    <TextView
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Título"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentStart="true" />

    <!-- CheckBox para favorito -->
    <CheckBox
        android:id="@+id/favoritoCheckbox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="#FFEB3B"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_star_checkbox"/>

    <!-- Fecha u otro detalle opcional -->
    <TextView
        android:id="@+id/noteTime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Última modificación:"
        android:textColor="#7A7575"
        android:textSize="12sp"
        android:layout_below="@id/noteText"
        android:layout_alignParentStart="true" />

</RelativeLayout>

